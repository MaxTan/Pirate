{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gradle",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "build"
            ]
        },
        {
            "taskName": "clean",
            "args": [
                "clean"
            ]
        },
        {
            "taskName": "run",
            "args": [
                "-q",
                "run"
            ]
        }
    ]
}